{
  "name": "thermostat-app",
  "version": "1.0.0",
  "description": "Thermostat app",
  "author": "Ilia Barchugov <barchewbacca@gmail.com>",
  "main": "build/index.js",
  "scripts": {
    "install:client": "cd client && npm install",
    "start:client": "cd client && npm start",
    "test:client": "cd client && npm run test:coverage",
    "start": "concurrently \"node .\" \"npm run start:client\"",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "dev": "set debug=* && ts-node-dev --respawn --transpileOnly ./server/index.ts --r dotenv/config",
    "prestart": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "now-build": "cd client && npm run build"
  },
  "license": "MIT",
  "dependencies": {
    "@redux-saga/delay-p": "^1.1.2",
    "@types/react-redux": "^7.1.8",
    "@types/redux-saga": "^0.10.5",
    "axios": "^0.19.2",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "prettier": "^1.19.1",
    "react-redux": "^7.2.0",
    "redux-devtools-extension": "^2.13.8",
    "ts-node": "^8.5.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "concurrently": "^5.1.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^5.20.1",
    "tslint-react": "^4.2.0",
    "typescript": "^3.7.3"
  }
}
